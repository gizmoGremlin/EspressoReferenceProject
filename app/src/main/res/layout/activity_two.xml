<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityTwo">

    <TextView
            android:textSize="22sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/activitytwo_wasrecieved_textview"
            android:text="waiting for messages"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/activitytwo_my_message_textview"
            android:text="placeholder"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/activitytwo_wasrecieved_textview"

           android:layout_below="@+id/activitytwo_wasrecieved_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</RelativeLayout>